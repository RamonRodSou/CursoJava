package fundamentos;

import java.util.Scanner;

import javax.swing.JOptionPane;

public class DesafioConversao {

	public static void main(String[] args) {
		
		Scanner entrada = new Scanner(System.in);
		
		System.out.print("Salario de Janeiro: \n" );
		String janeiro = entrada.nextLine();
		
		System.out.print("Salario de fevereiro: \n");
		String fevereiro = entrada.nextLine();
		
		System.out.print("Salario de março: \n");
		String marco = entrada.nextLine();
		
		double valorJaneiro = Double.parseDouble(janeiro);
		double valorFevereiro = Double.parseDouble(fevereiro);
		double valorMarco = Double.parseDouble(marco);
		
		double soma = valorJaneiro + valorFevereiro + valorMarco;
		double media = soma / 3;
		
		System.out.println("Soma = " + soma);
		System.out.println("Média = " + media);
	}

}
