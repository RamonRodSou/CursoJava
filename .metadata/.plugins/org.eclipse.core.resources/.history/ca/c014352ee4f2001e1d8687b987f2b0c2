package fundamentos;

public class AreaCircunferencia {
	
	public static void main(String[] args) {
		
		double raio = 3.4;
		final double PI = 3.14159;  // final = valor constante
		
		double area = PI * raio * raio;
		
		System.out.println(area);
		
		raio = 12;
		area = PI * raio * raio;
		
		System.out.println("O valor de área é " + area + " m2");

	}
}
